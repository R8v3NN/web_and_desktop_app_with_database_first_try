@page
@model WebApplication2.Pages.Zlecenia.EdytujOperacjeModel
@{
}

<br />
<h2>Edytuj Operacje	@Model.operacjeInfo.NazwaOperacji </h2>
<form method="POST">
	<input type="hidden" name="id" value="@Model.operacjeInfo.IdOperacji" />
	<div class="row mb-3">
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Data Operacji</label>
		<div class="col-sm-6">
			@{
				DateTime? dataOperacji = Model.listOperacjeZmienne.Count > 0 ? Model.listOperacjeZmienne[0].DataOperacji : null;
				string dataOperacjiString = dataOperacji.HasValue
				? dataOperacji.Value.ToString("yyyy-MM-dd")
				: string.Empty;
			}

			<input type="date" class="form-control" name="DataOperacji" value="@dataOperacjiString" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Czas Operacji</label>
		<div class="col-sm-6">
			<input type="number" min="0" placeholder='0' class="form-control" name="CzasOperacji" value="@Model.operacjeInfo.CzasOperacji" />
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Zużycie Materiałów</label>
		<div class="col-sm-6">
			<input type="number" min="0" step='0.01' placeholder='0.00' class="form-control" name="ZuzycieMaterialow" value="@Model.operacjeInfo.ZuzycieMaterialow" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" href="/" class="btn btn-primary">Dodaj</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Anuluj</a>
		</div>
	</div>
</form>